.card.status-block
  .card-block
    .card-status
      .status-top-nav
        %ul.list-inline
          %li.li-btns
            %i.icon-share-alt
            Share status
          %li.li-breakers |
          %li.li-btns#post-photo
            %i.icon-cloud-upload
            Upload Photos
          %li.li-breakers |
          %li.li-btns
            %i.icon-camera
            Create an album
        .tri-up
      .media
        .media-left
          %a{:href => "/profile/#{current_user.username}"}
            %img._bth.img{:height => "40", :src => current_user.profile_picture, :width => "40"}/
        .media-body
          %textarea.form-control-outline#text-status{:placeholder => "What's going on..", :rows => "3"}
      .row.padding-left-sm#image-container.hide
      .link-preview-container
  .card-footer
    .row.no-margin
      %button.btn.btn-default-outline.btn-sm.btn-status-footer
        %i.icon-camera.icons
      %button.btn.btn-default-outline.btn-sm.btn-status-footer
        %i.icon-music-tone.icons
      %button.btn.btn-default-outline.btn-sm.btn-status-footer
        %i.icon-location-pin.icons
      %button.btn.btn-primary-outline.btn-sm.pull-right#share-post Share
      .loader.loader-inner.ball-pulse.pull-right#status-widget-loader.hide
        %div
        %div
        %div
.image-upload-form.hide
  = render "widgets/posts/form_image_upload"

%script#post-image-container-template{:type => "text/x-handlebars-template"}
  .col-sm-2.nplr.margin-top-xs
    .panel-img
      %img{:src => "{{image_thumb}}", :width => "64", :height => "64"}

%script#post-image-next-container-template{:type => "text/x-handlebars-template"}
  .col-sm-2.nplr.margin-top-xs
    .panel-img.panel-img-add#next-img-upload
      %i.fa.fa-plus

%script#expanded-url-preview-template{:type => "text/x-handlebars-template"}
  .card.link-preview-card
    %a{:href => "{{url}}", :target => "_blank"}
      %img.card-img-top.w100{"src" => "{{image_src}}", :height => "300"}
    .card-block.link-preview-card-bottom
      %p.card-text.link-preview-title {{link_title}}
      %small.link-preview-desc {{link_desc}}
