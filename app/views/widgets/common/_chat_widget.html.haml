.chat-widget-container
  .new-message-btn
    %span.icon-menu
    %nbsp
    New Message

.chat-window-holder

%script#chat-people-template{:type => "text/x-handlebars-template"}
  .media.chat-people{"data-fname" => "Rahul Kumar", "data-uid" => "{{user_id}}"}
    .media-left
      %a{:href => "#"}
        %img.media-object.online-marker-border{:src => "{{profile_picture}}", :width => 28}/
    .media-body
      .header
        {{full_name}}
        %span.badge.pull-right.hide
          4

%script#chat-window-template{:type => "text/x-handlebars-template"}
  .chat-window{:style => "right: {{position}}px", :id => "chat-window-id-{{user_id}}"}
    .header
      {{name}}
      .pull-right
        .icon-close
    .body
    .input
      %input.chat-send-message-input{:type => "text", :placeholder => "Type your message", "data-uid" => "{{user_id}}"}

%script#chat-window-incomming-message{:type => "text/x-handlebars-template"}
  .media.incomming-message
    .media-left
      %a{:href => "#"}
        %img.media-object{:src => "https://scontent.fblr1-1.fna.fbcdn.net/v/t1.0-1/c0.46.160.160/p160x160/10273906_10205850730174579_6462288405333286776_n.jpg?oh=359b1ec332d116ebe74618b6e2037c48&oe=58A6F883", :width => 28}/
    .media-body
      {{message}}

%script#chat-window-outgoing-message{:type => "text/x-handlebars-template"}
  .row.outer-message
    .outgoing-message
      {{message}}